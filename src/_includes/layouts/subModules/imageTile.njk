<div class="image-tile">
  {% for row in component.data.rows %}
    <div class="row">
      {% for image in row.images %}
        {% if image
          .src
          .endsWith('.mov')or image
          .src
          .endsWith('.mp4') %}
          <video autoplay playsinline loop class="myVideo" src="{{ image.src }}" alt="{{ image.alt }}" controls></video>
        {% else %}
          <img src="{{ image.src }}" alt="{{ image.alt }}">
        {% endif %}
      {% endfor %}
    </div>
  {% endfor %}
</div>