<div class="image-tile">
  {% for row in component.data.rows %}
    <div class="row" style="--num-tags: {{ row.images | length }};">
      {% for image in row.images %}
        {% if image
          .src
          .endsWith('.mov')or image
          .src
          .endsWith('.mp4') %}
          <video class="tag" playsinline src="{{ image.src }}" alt="{{ image.alt }}" controls></video>
        {% else %}
          <img class="tag" src="{{ image.src }}" alt="{{ image.alt }}">
        {% endif %}
      {% endfor %}
    </div>
  {% endfor %}
</div>