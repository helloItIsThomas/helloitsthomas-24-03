
<div onClick="toProject()" id="frontC">
{# <div id="frontC"> #}
  <div id="thumbnail">
    <canvas class="glslCanvas" data-fragment-url="/shaders/shader.frag"></canvas>
    <img id="texImg" src="/assets/diaImg.png" style="display: none;"></img>
    <script>
      const shaderClock = {
        time: 1,
      };
    gsap.to(shaderClock, {
        time: 0,
        duration: 1.0,
        onUpdate: () => {
          sandbox.setUniform("u_myTime", shaderClock.time);
        },
        onComplete: () => {
          gsap.to(shaderClock, {
            time: 1,
            duration: 0.33,
            onUpdate: () => {
              sandbox.setUniform("u_myTime", shaderClock.time);
            },
          });
        },
      });

      const canvas = document.querySelector('.glslCanvas');
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
      const sandbox = new GlslCanvas(canvas);
      const thisImg = document.querySelector("#thumbnail img");
      sandbox.setUniform("u_tex", thisImg.src);

      window.addEventListener('resize', () => {
        sandbox.setUniform("u_tex", thisImg.src);
      });
    </script>
  </div>
</div>